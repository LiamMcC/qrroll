<%- include('../partials/header') -%>
      <div class="container">
             
         <h1>Generate One QR Code</h1> 
        
<p>Enter the details below to generate a single QR Code for a stusent. This will not be emaile automatically</p>



<div class="rcontainer">
    <div class="flex-item" style="width:90%;">
      
        <form action="/generateqr" method="post" style="width:90%;">
            <div class="form-group">
                <input type="text" name="fname" placeholder="First Name" required>
            </div>
            <div class="form-group">
                <input type="text" name="sname" placeholder="Surname" required>
            </div>
            <div class="form-group">
                <select name="class" id="classSelect" class="form-control">
                    <option value="">Please Pick Class</option>
                    <% results.forEach(row => { %>
                        
                        <option value="<%= row.class %>"><%= row.class %></option>
                    <% }); %>
                </select>
            </div>
            <div class="form-group">
                <input type="text" name="studentno" placeholder="Student Number" required>
            </div>
            <input type="submit" value="Make It!" class="button">
        </form>
    </div>
   
  </div>
  
</div>

  

<%- include('../partials/footer') -%>
</body>
</html>
